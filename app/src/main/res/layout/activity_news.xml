<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".news"
  >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Latest News"
        android:textSize="25sp"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="RTO comes at home! Here’s how you can apply for DL, RC, and other services online"
        android:textSize="18sp"
        android:textAlignment="center"

        android:gravity="center"
        android:textStyle="bold"
        android:padding="5dp"
        android:textColor="#000"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Overall, 18 RTO-related services can be availed completely online, which means that you don’t have to visit the RTO office anymore. You can use Aadhar-based authentication to avail the services online."
        android:textSize="18sp"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="normal"
        android:padding="5dp"
        android:textColor="#000"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="No need to go to RTO office for Driving License, read new guidelines here"
        android:textSize="18sp"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="5dp"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Under this new rule, the entire process of obtaining Learner's license i.e. from application to printing will now be done online. Also, electronic certificates and documents can be used for medical certificates, learner’s license, surrender of driver’s license and renewal of Driving License."
        android:textSize="18sp"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="normal"
        android:padding="5dp"
        android:textColor="#000"

        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>